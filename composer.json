{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "apygg/apygg",
    "type": "project",
    "description": "API Boilerplate APYGG - Laravel 12 production-ready with FrankenPHP, PostgreSQL, Redis, and modular architecture.",
    "keywords": ["laravel", "api", "boilerplate", "frankenphp", "postgresql", "redis"],
    "license": "MIT",
    "require": {
        "php": "^8.5",
        "http-interop/http-factory-guzzle": "^1.2",
        "laravel/framework": "12.40.0",
        "laravel/horizon": "^5.33",
        "laravel/octane": "^2.13.3",
        "laravel/reverb": "^1.5",
        "laravel/scout": "^10.17",
        "laravel/socialite": "^5.23",
        "laravel/tinker": "^2.10.1",
        "meilisearch/meilisearch-php": "^1.15",
        "php-open-source-saver/jwt-auth": "^2.8",
        "sentry/sentry-laravel": "^4.15",
        "spatie/laravel-permission": "^6.21"
    },
    "require-dev": {
        "fakerphp/faker": "^1.23",
        "laravel/pail": "^1.2.2",
        "laravel/pint": "^1.13",
        "laravel/sail": "^1.41",
        "laravel/telescope": "^5.11",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.6",
        "phpunit/phpunit": "^11.5.3"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "App\\Modules\\": "app/Modules/",
            "App\\Infrastructure\\": "app/Infrastructure/",
            "App\\Helpers\\": "app/Helpers/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@php artisan clear-compiled || true",
            "@php artisan package:discover --ansi || true"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "@php -r \"file_exists('env/dev.env') || (is_dir('env') && file_exists('env/dev.env.example') && copy('env/dev.env.example', 'env/dev.env'));\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"php artisan pail --timeout=0\" \"npm run dev\" --names=server,queue,logs,vite"
        ],
        "test": [
            "@php artisan config:clear --ansi",
            "@php artisan test"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": [
                "sentry/sentry-laravel",
                "laravel/telescope",
                "laravel/horizon"
            ]
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
