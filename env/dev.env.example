APP_NAME=DamblixAPI
APP_ENV=dev
APP_KEY=
APP_DEBUG=true
APP_URL=https://apygg.dev.wakuwakuamiguito.com
APP_TIMEZONE=UTC
OCTANE_SERVER=frankenphp

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# Logging Configuration
LOG_CHANNEL=daily_directory
LOG_LEVEL=debug
LOG_ASYNC=false
ACTIVITY_LOGGING=true

# Security Logging Configuration
SECURITY_LOGGING_ENABLED=true
SECURITY_LOG_SUSPICIOUS_URLS=true
SECURITY_LOG_MALICIOUS_HEADERS=true
SECURITY_LOG_INJECTION_ATTEMPTS=true
SECURITY_LOG_AUTH_ERRORS=true
SECURITY_LOG_CORS_VIOLATIONS=true
SECURITY_LOG_RATE_LIMIT=true
SECURITY_LOG_WEBHOOKS=true
SECURITY_LOG_FAILED_LOGINS=true
SECURITY_LOG_UNUSUAL_ACTIVITY=true
SECURITY_LOG_EXCEPTIONS=true

# API Problem Details Logging Configuration
API_PROBLEM_LOGGING_ENABLED=true
API_PROBLEM_LOG_404_ERRORS=false
API_PROBLEM_LOG_VALIDATION_ERRORS=true
API_PROBLEM_LOG_AUTH_ERRORS=true
API_PROBLEM_IGNORED_TYPES="https://damblix.dev/errors/NotFoundHttpException"

DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=apygg
DB_USERNAME=apygg
DB_PASSWORD=secret

DB_LOGS_CONNECTION=pgsql
DB_LOGS_HOST=postgres_logs
DB_LOGS_PORT=5432
DB_LOGS_DATABASE=apygg_logs
DB_LOGS_USERNAME=apygg_logs
DB_LOGS_PASSWORD=secret_logs

REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PORT=6379
QUEUE_CONNECTION=redis
CACHE_STORE=redis

# Sessions (disabled for stateless API)
SESSION_DRIVER=array

# Broadcasting con Reverb
BROADCAST_CONNECTION=reverb
REVERB_APP_ID=local-app
REVERB_APP_KEY=
REVERB_APP_SECRET=
REVERB_SERVER_HOST=0.0.0.0
REVERB_SERVER_PORT=8080
# host público detrás de Nginx:
REVERB_HOST=apygg.dev.wakuwakuamiguito.com
REVERB_PORT=443
# REVERB_SCHEME=wss

# Scout + Meilisearch (contenedor)
SCOUT_DRIVER=meilisearch
MEILISEARCH_HOST=http://meilisearch:7700
MEILISEARCH_KEY=masterKey
SCOUT_QUEUE=true

# Archivos (dev local)
FILESYSTEM_DISK=local

# JWT
JWT_TTL=15
JWT_SECRET=
JWT_ALGO=HS256
JWT_REFRESH_TTL=10080
JWT_BLACKLIST_ENABLED=true
JWT_BLACKLIST_GRACE=30


# Socialite (rellenar al probar)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=${APP_URL}/auth/google/callback

FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=
FACEBOOK_REDIRECT_URI=${APP_URL}/auth/facebook/callback

# Sentry
SENTRY_LARAVEL_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.2
SENTRY_PROFILES_SAMPLE_RATE=0.0

TELESCOPE_ENABLED=true

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://damblix-app.dev.wakuwakuamiguito.com,https://apygg.dev.wakuwakuamiguito.com,http://localhost:5173
# Activar logs de debug de CORS (solo desarrollo)
CORS_DEBUG_LOG=false

# Password Hashing
HASH_DRIVER=argon2id
ARGON_MEMORY=65536
ARGON_TIME=5
ARGON_THREADS=3
BCRYPT_ROUNDS=12
