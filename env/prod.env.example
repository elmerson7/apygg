APP_NAME=DamblixAPI
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://api.midominio.com
APP_TIMEZONE=UTC
OCTANE_SERVER=frankenphp

# Logging Configuration
LOG_CHANNEL=production_stack
LOG_LEVEL=warning
LOG_ASYNC=false
ACTIVITY_LOGGING=true

# DB gestionada (RDS/Supabase)
DB_CONNECTION=pgsql
DB_HOST=TU_HOST_RDS
DB_PORT=5432
DB_DATABASE=TU_DB
DB_USERNAME=TU_USER
DB_PASSWORD=TU_PASS

# Base de datos de logs (RDS/Supabase separada)
DB_LOGS_CONNECTION=pgsql
DB_LOGS_HOST=TU_HOST_LOGS_RDS
DB_LOGS_PORT=5432
DB_LOGS_DATABASE=TU_DB_LOGS
DB_LOGS_USERNAME=TU_USER_LOGS
DB_LOGS_PASSWORD=TU_PASS_LOGS

# Redis gestionado
REDIS_CLIENT=phpredis
REDIS_HOST=TU_REDIS_HOST
REDIS_PORT=6379
QUEUE_CONNECTION=redis
CACHE_STORE=redis

# Sessions (disabled for stateless API)
SESSION_DRIVER=array

# Reverb publicado (puede ser ws.midominio.com)
BROADCAST_CONNECTION=reverb
REVERB_APP_ID=prod-app
REVERB_APP_KEY=
REVERB_APP_SECRET=
REVERB_SERVER_HOST=0.0.0.0
REVERB_SERVER_PORT=8080
REVERB_HOST=ws.midominio.com
REVERB_PORT=443
# REVERB_SCHEME=wss

# Meilisearch Cloud
SCOUT_DRIVER=meilisearch
MEILISEARCH_HOST=https://xxx.meilisearch.com
MEILISEARCH_KEY=
SCOUT_QUEUE=true

# S3
FILESYSTEM_DISK=s3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=

# JWT
JWT_TTL=15
JWT_SECRET=
JWT_ALGO=HS256
JWT_REFRESH_TTL=10080
JWT_BLACKLIST_ENABLED=true
JWT_BLACKLIST_GRACE=30

# Sentry
SENTRY_LARAVEL_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.2
SENTRY_PROFILES_SAMPLE_RATE=0.0

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://app.midominio.com,https://www.midominio.com

# Password Hashing (valores más agresivos para producción)
HASH_DRIVER=argon2id
ARGON_MEMORY=131072
ARGON_TIME=6
ARGON_THREADS=4
BCRYPT_ROUNDS=12
