APP_NAME=DamblixAPI
APP_ENV=staging
APP_KEY=
APP_DEBUG=false
APP_URL=https://apygg.staging.midominio.com
APP_TIMEZONE=UTC
OCTANE_SERVER=frankenphp


# Logging Configuration
LOG_CHANNEL=daily_directory
LOG_LEVEL=info
LOG_ASYNC=false
ACTIVITY_LOGGING=true

# Security Logging Configuration
SECURITY_LOGGING_ENABLED=true
SECURITY_LOG_SUSPICIOUS_URLS=true
SECURITY_LOG_MALICIOUS_HEADERS=true
SECURITY_LOG_INJECTION_ATTEMPTS=true
SECURITY_LOG_AUTH_ERRORS=true
SECURITY_LOG_CORS_VIOLATIONS=true
SECURITY_LOG_RATE_LIMIT=true
SECURITY_LOG_WEBHOOKS=true
SECURITY_LOG_FAILED_LOGINS=true
SECURITY_LOG_UNUSUAL_ACTIVITY=true
SECURITY_LOG_EXCEPTIONS=true

# API Problem Details Logging Configuration
API_PROBLEM_LOGGING_ENABLED=true
API_PROBLEM_LOG_404_ERRORS=false
API_PROBLEM_LOG_VALIDATION_ERRORS=true
API_PROBLEM_LOG_AUTH_ERRORS=true
API_PROBLEM_IGNORED_TYPES="https://damblix.dev/errors/NotFoundHttpException"

DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5432
DB_DATABASE=apygg
DB_USERNAME=apygg
DB_PASSWORD=secret

DB_LOGS_CONNECTION=pgsql
DB_LOGS_HOST=postgres_logs
DB_LOGS_PORT=5432
DB_LOGS_DATABASE=apygg_logs
DB_LOGS_USERNAME=apygg_logs
DB_LOGS_PASSWORD=secret_logs

REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PORT=6379
QUEUE_CONNECTION=redis
CACHE_STORE=redis

# Sessions (disabled for stateless API)
SESSION_DRIVER=array

BROADCAST_CONNECTION=reverb
REVERB_APP_ID=staging-app
REVERB_APP_KEY=
REVERB_APP_SECRET=
REVERB_SERVER_HOST=0.0.0.0
REVERB_SERVER_PORT=8080
REVERB_HOST=apygg.staging.midominio.com
REVERB_PORT=443

SCOUT_DRIVER=meilisearch
MEILISEARCH_HOST=http://meilisearch:7700
MEILISEARCH_KEY=masterKey
SCOUT_QUEUE=true

# Files Configuration
FILESYSTEM_DISK=s3

# S3 Configuration
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=apygg-staging-files
AWS_BUCKET_AVATARS=apygg-staging-avatars
AWS_BUCKET_DOCUMENTS=apygg-staging-documents
AWS_BUCKET_TEMP=apygg-staging-temp
AWS_USE_PATH_STYLE_ENDPOINT=false

# File Upload Limits
FILE_MAX_SIZE=10485760
FILE_MAX_SIZE_AVATAR=2097152
FILE_MAX_SIZE_DOCUMENT=52428800
FILE_ALLOWED_MIMES=jpg,jpeg,png,gif,pdf,doc,docx
FILE_ALLOWED_AVATAR_MIMES=jpg,jpeg,png,gif
FILE_ALLOWED_DOCUMENT_MIMES=pdf,doc,docx

# Antivirus Configuration
ANTIVIRUS_ENABLED=true
ANTIVIRUS_SCANNER=clamav
ANTIVIRUS_QUARANTINE_BUCKET=apygg-staging-quarantine
VIRUSTOTAL_API_KEY=

JWT_TTL=15
JWT_SECRET=
JWT_ALGO=HS256
JWT_REFRESH_TTL=10080
JWT_BLACKLIST_ENABLED=true
JWT_BLACKLIST_GRACE=30

SENTRY_LARAVEL_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.2
SENTRY_PROFILES_SAMPLE_RATE=0.0

# CORS Configuration  
CORS_ALLOWED_ORIGINS=https://staging-app.midominio.com,https://staging.midominio.com

# Password Hashing
HASH_DRIVER=argon2id
ARGON_MEMORY=65536
ARGON_TIME=5
ARGON_THREADS=3
BCRYPT_ROUNDS=12
